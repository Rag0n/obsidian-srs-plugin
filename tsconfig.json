{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "module": "ESNext",
    "target": "es2019",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es6", "scripthost", "es2019"]
  },
  "include": ["**/*.ts"]
}
